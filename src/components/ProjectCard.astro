---
const { title, description, image, urlGitHub, urlDemo, featured } = Astro.props;
---

<style>
  .project-card {
    background-color: #1e1e1e;
    border-radius: 12px;
    width: 100%;
    max-width: 384px;
    padding: 1rem;
    color: white;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    box-shadow: 0 0 8px rgba(255, 255, 255, 0.05);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    height: 600px;
  }

  .project-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 8px 20px rgba(255, 255, 255, 0.1);
  }

  .project-image {
    width: 100%;
    height: 192px;
    border-radius: 8px;
    object-fit: cover;
    background-color: #111;
  }

  .badge {
    background-color: #444;
    display: inline-block;
    color: white;
    padding: 4px 10px;
    border-radius: 999px;
    font-size: 0.75rem;
    font-weight: 500;
  }

  .project-card h3 {
    margin: 0;
    font-size: 1.25rem;
  }

  .project-card p {
    margin: 0.25rem 0;
    color: #ccc;
    font-size: 0.95rem;
    flex-grow: 1;
  }

  .buttons {
    display: flex;
    gap: 0.5rem;
    margin-top: auto;
  }

  .buttons a {
    text-decoration: none;
    padding: 8px 16px;
    font-size: 0.85rem;
    border-radius: 6px;
    font-weight: 500;
    border: none;
    transition: all 0.3s ease;
  }

  .buttons a:first-child {
    background-color: black;
    color: white;
  }

  .buttons a:first-child:hover {
    background-color: #333;
  }

  .buttons a:last-child {
    background-color: white;
    color: black;
  }

  .buttons a:last-child:hover {
    background-color: #ddd;
  }
</style>

<div class="project-card">
  <img class="project-image" src={image} alt={title + ' project preview'} />
  {featured && <div class="badge">Featured Project</div>}
  <h3>{title}</h3>
  <p>{description}</p>
  <div class="buttons">
    {urlGitHub && <a href={urlGitHub} target="_blank" rel="noopener noreferrer">GitHub</a>}
    {urlDemo && <a href={urlDemo} target="_blank" rel="noopener noreferrer">Live Demo</a>}
  </div>
</div>
